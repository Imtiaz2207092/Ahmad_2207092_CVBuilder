<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cv_builder.CreateCVController"
      style="-fx-background-color: linear-gradient(to bottom, #1e1e2f, #2b2b42); -fx-padding: 30;">

    <Label text="Create Your CV"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #50e3c2;"/>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">

        <Label text="Full Name:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>


        <Label text="Email:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>


        <Label text="Phone:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>


        <Label text="Address:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>


        <Label text="Education:" style="-fx-text-fill: white;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="educationField" prefRowCount="2" GridPane.rowIndex="4" GridPane.columnIndex="1"/>


        <Label text="Skills:" style="-fx-text-fill: white;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="skillsField" prefRowCount="2" GridPane.rowIndex="5" GridPane.columnIndex="1"/>


        <Label text="Experience:" style="-fx-text-fill: white;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextArea fx:id="experienceField" prefRowCount="2" GridPane.rowIndex="6" GridPane.columnIndex="1"/>


        <Label text="Projects:" style="-fx-text-fill: white;" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextArea fx:id="projectsField" prefRowCount="2" GridPane.rowIndex="7" GridPane.columnIndex="1"/>


        <Label text="Photo:" style="-fx-text-fill: white;" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="8" GridPane.columnIndex="1">
            <TextField fx:id="photoPathField" promptText="Select photo..." editable="false" prefWidth="200"/>
            <Button text="Choose Photo" onAction="#choosePhoto"
                    style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </GridPane>


    <Button text="Generate CV"
            style="-fx-background-color: #50e3c2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"
            onAction="#generateCV"/>
</VBox>
