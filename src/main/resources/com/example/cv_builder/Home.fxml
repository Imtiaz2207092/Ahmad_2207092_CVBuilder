<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #1e1e2f, #2b2b42); -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cv_builder.HomeController">

    <Text style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: white;" text="Welcome To My CV BUILDER" />

    <Button onAction="#openCreateCV" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 150;" text="Create Your CV" />

    <TableView fx:id="cvTableView" style="-fx-background-color: rgba(255,255,255,0.1);" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="250" />
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150" />
        </columns>
    </TableView>

</VBox>
